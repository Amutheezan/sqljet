<?xml version="1.0" encoding="UTF-8"?>
<project
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd"
    xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <parent>
        <artifactId>project</artifactId>
        <groupId>org.tmatesoft.sqljet</groupId>
        <version>1.1.0-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>sqljet-browser</artifactId>
    <packaging>jar</packaging>

    <name>SQLJet Database Browser</name>
    <description>SQLJet Database Browser</description>
    <url>http://www.sqlet.com/browser</url>
    <scm>
        <connection>scm:svn:http://svn.sqljet.com/repos/sqljet/branches/maven/sqljet-browser</connection>
        <developerConnection>scm:svn:https://svn.sqljet.com/repos/sqljet/branches/maven/sqljet-browser</developerConnection>
    </scm>

    <build>
        <plugins>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>webstart-maven-plugin</artifactId>
                <version>1.0-alpha-2-SNAPSHOT</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>jnlp-single</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <templateDirectory>src/main/jnlp</templateDirectory>
                    <workingDirectory>${project.build.directory}/jnlp</workingDirectory>
                    <jnlp>
                        <inputTemplate>src/main/jnlp/browser.jnlp</inputTemplate>
                        <outputFile>browser.jnlp</outputFile>
                        <mainClass>${project.groupId}.browser.DBBrowser</mainClass>
                    </jnlp>
                    <sign>
                        <keystore>${project.build.directory}/keystore</keystore>
                        <keypass>sqljet</keypass>
                        <storepass>secret</storepass>
                        <alias>tmate</alias>
                        <validity>3650</validity>
                        <dnameCn>TMate Software</dnameCn>
                        <dnameO>TMate Software</dnameO>
                        <dnameL>Prague</dnameL>
                        <dnameC>CZ</dnameC>
                        <verify>false</verify>
                        <verify>false</verify>
                        <keystoreConfig>
                            <delete>true</delete>
                            <gen>true</gen>
                        </keystoreConfig>
                    </sign>
                    <pack200>true</pack200>
                    <gzip>true</gzip>
                    <outputJarVersions>true</outputJarVersions>
                    <install>false</install>
                    <verbose>false</verbose>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.tmatesoft.sqljet</groupId>
            <artifactId>sqljet</artifactId>
            <version>1.1.0-SNAPSHOT</version>
            <scope>compile</scope>
            <optional>false</optional>
        </dependency>

        <dependency>
            <groupId>org.netbeans.api</groupId>
            <artifactId>org-netbeans-swing-outline</artifactId>
            <version>RELEASE68</version>
            <scope>compile</scope>
            <optional>false</optional>
            <type>jar</type>
        </dependency>
    </dependencies>

</project>